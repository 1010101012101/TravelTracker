<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_back</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_back</item>
    </style>
    
    <!--
        Taken on March 15, 2015 from:
        http://stackoverflow.com/questions/5049852/android-drawing-separator-divider-line-in-layout
        A horizontal divider to be used anywhere in a layout.
    -->
    <style name="HorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    
    <style name="ThickHorizontalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    
</resources>
