<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:id="@+id/claimInfoScrollView" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/claimInfoClaimantNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/claim_info_claimant_name" />

        <TextView
            android:id="@+id/claimInfoStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/claim_info_claim_status" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/claimInfoStartDateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_format" />

            <TextView
                android:id="@+id/claimInfoDateSeparatorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/claim_info_date_to" />

            <Button
                android:id="@+id/claimInfoEndDateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_format" />

        </LinearLayout>

        <View style="@style/ThickHorizontalDivider" />
        
        <TextView
            android:id="@+id/claimInfoDestinationsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/claim_info_destinations" />

        <LinearLayout
            android:id="@+id/claimInfoDestinationsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <View style="@style/ThickHorizontalDivider" />
        
        <TextView
            android:id="@+id/claimInfoTagsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/claim_info_tags" />

        <LinearLayout
            android:id="@+id/claimInfoTagsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <View
            android:id="@+id/claimInfoTagsThickHorizontalDivider"
            style="@style/ThickHorizontalDivider" />

        <RelativeLayout
            android:id="@+id/claimInfoTotalsRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
	        <TextView
	            android:id="@+id/claimInfoCurrencyTotalsTextView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentStart="true"
	            android:gravity="start"
	            android:text="@string/claim_info_currency_totals" />
	
	        <TextView
	            android:id="@+id/claimInfoCurrencyTotalsListTextView"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentEnd="true"
	            android:gravity="end" />

        </RelativeLayout>

        <Button
            android:id="@+id/claimInfoViewItemsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/claim_info_view_items" />

        <TextView
            android:id="@+id/claimInfoLastApproverTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/claim_info_last_approver" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/claim_info_comments" />

        <cmput301w15t07.TravelTracker.util.NonScrollListView
            android:id="@+id/claimInfoCommentsListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </cmput301w15t07.TravelTracker.util.NonScrollListView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <Button
            android:id="@+id/claimInfoClaimSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/claim_info_claim_submit_button" />

        <LinearLayout
            android:id="@+id/claimInfoApproverButtonsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="?android:attr/buttonBarStyle" >

            <Button
                android:id="@+id/claimInfoClaimReturnButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:text="@string/claim_info_claim_return_button"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/claimInfoClaimApproveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"
                android:text="@string/claim_info_claim_approve_button"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

        <EditText
            android:id="@+id/claimInfoCommentEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/claim_info_comment_prompt"
            android:inputType="textMultiLine" >

        </EditText>

    </LinearLayout>

</ScrollView>
